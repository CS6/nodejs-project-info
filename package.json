{
  "name": "nodejs-project-info",
  "version": "0.0.3",
  "description": "NodeJS Project Information",
  "main": "./dist/index.js",
  "scripts": {
    "clear": "rimraf ./node_modules ./dist ./coverage ./package-lock.json ./webpack.conf.js",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "prebuild": "tslint --project ./",
    "build": "ncc build ./src/index.ts -m -o ./dist/",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "watch": "tsc -w --project ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/nodejs-project-info.git"
  },
  "keywords": [
    "jest",
    "typescript"
  ],
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/fixtures/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "html",
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/nodejs-project-info/issues"
  },
  "homepage": "https://gregoranders.github.io/nodejs-project-info/",
  "dependencies": {
    "@actions/core": "1.2.3",
    "semver": "7.1.3"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.5",
    "@zeit/ncc": "0.22.0",
    "jest": "25.2.3",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "typescript": "3.8.3"
  }
}
